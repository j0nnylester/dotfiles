# if running bash
if [ -n "$BASH_VERSION" ]; then
    # include .bashrc if it exists
    if [ -f "$HOME/.bashrc" ]; then
        source "$HOME/.bashrc"
    fi
fi

if [ -d "$HOME/bin" ] ; then
    PATH="$HOME/bin:$PATH"
fi

if [ -f "$HOME/.bash_aliases" ]; then
    source "$HOME/.bash_aliases"
fi

# Set the base PS1
export PS1='[\A\[$(tput sgr0)\]] \[\033[01;32m\]\u@\h\[\033[01;34m\] \w \$\[\033[00m\] '

# Source the git bash completion file
if [ -f ~/.git-completion.bash ]; then
    source "$HOME/.git-completion.bash"
    source "$HOME/.git-prompt.bash"
    PS1='[\A\[$(tput sgr0)\]] \[\033[01;32m\]\u@\h\[\033[01;34m\] \w$(__git_ps1 "(%s)") \$\[\033[00m\] '
fi
export PS1

export PATH="$PATH:/usr/local/lib/npm/bin:$HOME/.yarn/bin:$HOME/.config/yarn/global/node_modules/.bin:$HOME/OneDrive - Wealth Wizards Ltd/bin"
complete -W "\`grep -oE '^[a-zA-Z0-9_.-]+:([^=]|$)' ?akefile | sed 's/[^a-zA-Z0-9_.-]*$//'\`" make

if [ -x "$(command -v kubectl)" ]; then
  source <(kubectl completion bash)
fi

export KUBECONFIG="$HOME/.kube/config:$HOME/.kube/clusters"